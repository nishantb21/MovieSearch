<!DOCTYPE html>
<html>

<head>
  <%- include ("../partials/header.ejs") %>
  <script src="/history.js"></script>
</head>
<body>
  <%- include ("../partials/nav.ejs") %>
    <div class="container">
      <div class="row">
        <h2>History</h2>
      </div>
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <div class="accordion accordion-flush" id="accordionFlushExample">
            <% results.forEach(function(result) { %>
              <div class="accordion-item">
                <h2 class="accordion-header" id="<%=result["imdb_id"] %>-flush-heading">
                  <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#<%=result["imdb_id"] %>-flush-collapse" aria-expanded="false" aria-controls="<%=result["imdb_id"] %>-flush-collapse" onclick=openAccordian('<%=result["imdb_id"] %>')>
                    <%=result["title"] %> (<%=result["year"] %>)
                  </button>
                </h2>
                <div id="<%=result["imdb_id"] %>-flush-collapse" class="accordion-collapse collapse" aria-labelledby="<%=result["imdb_id"] %>-flush-heading" data-bs-parent="#accordionFlushExample" data-fetched="false">
                  <div class="row py-md-5">
                    <div class="col-md-4">
                      <div class="text-center">
                        <img height="350px" src="" id="<%=result["imdb_id"] %>.img">
                      </div> 
                    </div>
                    <div class="col-md-6 offset-md-1">
                      <div class="row">
                        <div class="h3 fw-light left-border">
                          Plot
                        </div>
                        <div class="col-md-12" id="<%=result["imdb_id"] %>.plot"> 
                        </div>
                        <div class="col-md-6 py-md-3">
                          <div class="row">
                            <div class="col-12 left-border">
                              Actors
                            </div>
                            <div class="col-12 py-md-2" id="<%=result["imdb_id"] %>.actors">
                            </div>
                            <div class="col-12 left-border">
                              Producers
                            </div>
                            <div class="col-12 py-md-2" id="<%=result["imdb_id"] %>.producers">
                            </div>
                          </div>
                        </div>
                        <div class="col-md-6 py-md-3">
                          <div class="row">
                            <div class="col-12 left-border">
                              Ratings
                            </div>
                            <div class="col-12 py-md-1">
                              Internet Movie Database
                              <div class="progress my-md-2">
                                <div class="progress-bar progress-bar-striped" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" id="<%=result["imdb_id"] %>.imd"></div>
                              </div>
                            </div>
                            <div class="col-12 py-md-1">
                              Rotten Tomatoes
                              <div class="progress my-md-2">
                                <div class="progress-bar progress-bar-striped" role="progressbar"
                                  aria-valuenow="25"
                                  aria-valuemin="0" aria-valuemax="100" id="<%=result["imdb_id"] %>.rot"></div>
                              </div>
                            </div>
                            <div class="col-12 py-md-1">
                              Metacritic
                              <div class="progress my-md-2">
                                <div id="" class="progress-bar progress-bar-striped" role="progressbar"
                                  aria-valuenow="25"
                                  aria-valuemin="0" aria-valuemax="100" id="<%=result["imdb_id"] %>.meta"></div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
      </div>
    </div>
</body>

</html>